<div
  class="profile-container fixed bg-primarydark bg-opacity-50 first-letter w-1/2 h-3/4 flex flex-col rounded-md hidden"
>
  <div
    class="profile-header w-full h-8 bg-primarydark flex flex-row items-center justify-start pl-3"
  >
    <button id="ocultarDiv"><i class="bx bxs-home"></i></button>
  </div>
  <div class="profile-area-user w-full h-1/2 flex flex-row">
    <div
      class="profile-avatar w-1/2 h-full flex justify-center items-center flex-col"
    >
      <img
        class="w-38 h-34 border rounded-sm"
        src="https://mir-s3-cdn-cf.behance.net/projects/202/6467b333840174.Y3JvcCw5ODYsNzcyLDExOSww.jpg"
        alt=""
      />
      <div class="profile-name-user mt-2 text-white">
        <!-- <span id="name"></span> -->
      </div>
    </div>

    <div
      class="profile-avatar w-1/2 gap-2 h-full flex justify-center items-center flex-col"
    >
      <div class="item">
        <label for="name" class="bg-inherit">Nome:</label>
        <input
          type="text"
          name="name"
          id="name"
          class="bg-slate-700 text-white rounded-md w-1/2 h-7 p-1"
        />
      </div>
      <div class="item">
        <label for="name" class="bg-inherit">Email:</label>
        <input
          type="text"
          name="name"
          id="email"
          class="bg-slate-700 text-white rounded-md w-1/2 h-7 p-1"
        />
      </div>
      <div class="item">
        <label for="name" class="bg-inherit">Senha:</label>
        <input
          type="password"
          name="name"
          id="password
          class="bg-slate-700 text-white rounded-md w-1/2 h-7 p-1"
        />
      </div>
      <div class="item">
        <label for="name" class="bg-inherit">Celular:</label>
        <input
          type="phone"
          name="name"
          id="phone"
          class="bg-slate-700 text-white rounded-md w-1/2 h-7 p-1"
        />
      </div>
    </div>
  </div>

  <div class="profile-area-data border-t-2 my-2 w-full h-1/2 flex flex-row">
    <div
      class="profile-user-att w-1/2 h-full text-white flex justify-center items-center"
    >
      <ul class="list-none">
        <li><i class="bx bxs-bolt bx-border-circle"></i>Acertos: 15/23</li>
        <li><i class="bx bxs-invader bx-border-circle"></i>Erros: 15/23</li>
        <li><i class="bx bxs-shield bx-border-circle"></i>Medalhas: 15/23</li>
        <li><i class="bx bxs-medal bx-border-circle"></i>Medal: 15/23</li>
        <li><i class="bx bxs-heart bx-border-circle"></i>Vida: 15/23</li>
      </ul>
    </div>

    <div
      class="profile-user-att w-1/2 h-full text-white flex justify-center items-center"
    >
      <canvas id="myChart"></canvas>
    </div>
  </div>
</div>

<script src="/public/js/profile.js"></script>
