<style>
    .loader-content{
        position: fixed;
        top: 0;
        left: 0;
        z-index: 9999;
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .loader{
        display: block;
        position: relative;
        height: 12px;
        width: 80%;
        border: 1px solid #fff;
        border-radius: 10px;
        overflow: hidden;
      }
      .loader:after{
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        height: 100%;
        width: 0;
        background: #097e3a;
        animation: 3s prog ease-in infinite;
      }
      
      @keyframes prog {
        to  {   width: 100%;}
      }
      
    
</style>

<div class="loader-content">
    <span class="loader"></span>
</div>